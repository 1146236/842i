from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.common.exceptions import NoSuchElementException
from csv import writer
from time import sleep



from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
chrome_options = Options()
chrome_options.add_experimental_option("detach", True)
service=Service("C:\webdrivers")


driver = webdriver.Chrome(service=service)

driver.get("https://bazarstore.az/prices-drop")

with open("bazarstore.csv", "w", encoding="utf-8") as bazarstore_csv:
    csv_writer = writer(bazarstore_csv)
    csv_writer.writerow([' Product name', ' Initial price', ' Discount', ' Price'])

    for x in range(1):
        products = driver.find_elements(By.CLASS_NAME, 'bs-product-row')
        
        for product in products:
            try:
                Product_name = product.find_element(By.CLASS_NAME, 'product-title').text
                Initial_price = product.find_element(By.CLASS_NAME, 'regular-price').text
                Discount = product.find_element(By.CLASS_NAME, 'bs-discount').text
                Price = product.find_element(By.CLASS_NAME, 'pp_price_with_text').text
                csv_writer.writerow([Product_name, Initial_price, Discount, Price])
            except:
                Product_name = product.find_element(By.CLASS_NAME, 'product-title').text
                Price = product.find_element(By.CLASS_NAME, 'pp_price_with_text').text
                csv_writer.writerow([Product_name, Price])

        try:
            next_button = driver.find_element(By.LINK_TEXT, "Növbəti")
            next_button.click()
            sleep(5)
        except NoSuchElementException:
            driver.quit()
